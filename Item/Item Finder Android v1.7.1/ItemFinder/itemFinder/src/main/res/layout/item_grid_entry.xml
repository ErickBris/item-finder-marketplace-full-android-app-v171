<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.libraries.imageview.StaggeredImageView
        android:id="@+id/imgViewThumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/gallery_placeholder"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:background="@drawable/item_ribbon"
        android:orientation="vertical"
        android:padding="@dimen/dimen_5dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:layout_marginLeft="-3dp"
        android:id="@+id/linearRibbon">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textColor="@color/text_white_cloor"
            android:textSize="@dimen/text_size_16sp"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_5dp" />

    </LinearLayout>

</FrameLayout>
